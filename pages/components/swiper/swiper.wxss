.tower-swiper .tower-item {
    transform: scale(calc(0.5 + var(--index) / 10));
    margin-left: calc(var(--left) * 100rpx - 150rpx);
    z-index: var(--index);
}

.card-shadow{
    box-shadow:0px 6px 12px rgba(0,0,0,0.16);
}

.card-swiper swiper-item{
    padding:20rpx 0 20rpx;
}
.image-text-swiper .swiper-item{
    background-color:#ffffff;
}
.image-text-swiper .swiper-item .text-indent{
    text-indent: 30rpx;
}
.image-text-swiper image{
    height:153rpx;
    margin-bottom:5rpx;
}

.visiting-card-swiper .visiting-card-image{
    width:200rpx;
    height:238rpx;
}

.recommend-card-swiper{
    height:188rpx !important;
}
.recommend-card-swiper .recommend-card-image{
    width:132rpx;
    height:132rpx;
    overflow: hidden;
}

.recommend-card-swiper .recommend-card-image image{
    border-radius:50%;
}