<view wx:if="{{initPageChoice}}" class="init-page">
    <view class="cu-list">
        <view class="action border-title">
            <el-button round colour="#ffffff" text-colour="#51565F" name="跳过" style="float:right;" />
        </view>
    </view>
    <view class="padding-xs flex align-center">
        <view class="flex-sub text-center">
            <view class="text-xl padding">
                <text class="text-black text-bold">选择您需要了解的症状</text>
            </view>
            <view class="padding text-tips">至少选择2项，点击选中/取消</view>
        </view>
    </view>
    <view class="padding-lg flex-sub text-center">
        <el-button bind:handleclick="getChoise" class="button-margin" attribute-value="{{item}}" wx:for="{{Symptomlist}}" small="lg" wx:key="*/this" round name="{{item}}" colour="rgba(49,101,236,0.5)" />
    </view>
    <view class="chiose flex-sub text-center">
        <el-button bind:handleclick="getChoise" round name="选好了" block colour="#EDEDED" text-colour="#A8A8A8"></el-button>
    </view>
</view>