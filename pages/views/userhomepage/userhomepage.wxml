                <view class="fl padding-top-xs margin-left-lg">入驻平台</view>
                <view class="fr padding-xs text-black text-bold cuIcon-right"></view>
            </view>
            <view class="padding-xs margin-bottom-lg inline-block" style="width:100%;">
