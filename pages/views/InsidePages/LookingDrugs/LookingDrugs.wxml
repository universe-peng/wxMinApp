                <view class="search-form">
                    <text class="cuIcon-search"></text>
                    <input type="text" disabled placeholder="搜索症状/疾病/药品" confirm-type="search"></input>
                </view>
            </view>
        </navigator>
        <view class="cu-list margin-lr-sm margin-bottom-sm">
